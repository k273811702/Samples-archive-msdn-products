                  size="large"
                  image="SiteAttach"/>
        </group>
      </tab>
      <tab idMso="TabNewMailMessage">
        <group id="CCInsert2" label="SharePoint" insertAfterMso="GroupInclude">
          <button id="CCAttachButton2"
                  label ="Attach Document"
