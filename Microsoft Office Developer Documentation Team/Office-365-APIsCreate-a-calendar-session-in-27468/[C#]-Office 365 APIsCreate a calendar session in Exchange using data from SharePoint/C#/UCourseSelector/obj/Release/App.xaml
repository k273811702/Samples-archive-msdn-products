    <Application
    x:Class="UCourseSelector.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UCourseSelector">
    
    <Application.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <local:DateUTCToDateLocal x:Key="DateUTCToDateLocalConverter" />
            
            <DataTemplate x:Key="CalendarViewTemplate">
                <StackPanel Orientation="Horizontal" Width="600" Height="70">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0,10,0,0">
                        <TextBlock Text="{Binding StartTime}" 
                                   FontSize="14"
                                   Margin="10,2,0,0"
                                   TextTrimming="WordEllipsis" 
                                   TextWrapping="Wrap" 
                                    HorizontalAlignment="Left"
                        />
                        <TextBlock Text="{Binding End, Converter={StaticResource DateUTCToDateLocalConverter}}" 
                                   Opacity="0.49" 
                                   FontSize="12"
                                   FontWeight="Semilight" 
                                   Margin="10,0,0,0" 
                                   Height="26" 
                                   TextTrimming="WordEllipsis" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0,10,0,0">
                        <TextBlock Text="{Binding Subject}"
                               Width="300"
                               FontSize="14" 
                               Opacity="0.49" 
                               Margin="40,2,0,0" 
                               TextTrimming="WordEllipsis" 
                               TextWrapping="Wrap" 
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding Location.DisplayName}" 
                               FontSize="11" 
                               Opacity="0.49" 
                               Margin="40,0,0,0" 
                               TextTrimming="WordEllipsis" 
                               TextWrapping="Wrap" 
                               VerticalAlignment="Bottom" 
                               HorizontalAlignment="Left"/>
                    </StackPanel>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="SessionListTemplate">
                <StackPanel Orientation="Horizontal" Width="600" Height="80">
                    <!-- First Vertical Stackpanel -->
                    <StackPanel Orientation="Vertical" Width="300" VerticalAlignment="Top" Margin="0,10,0,0">
                        <TextBlock Text="{Binding Title}" 
                                   Margin="10,2,0,0"
                                   FontSize="14"
                                   FontWeight="Bold" 
                                   TextTrimming="WordEllipsis" 
                                   TextWrapping="NoWrap"  
                                   HorizontalAlignment="Left"
                        />
                        <TextBlock Text="{Binding Description}" 
                                   Margin="10,0,0,0" 
                                   FontSize="12"
                                   FontWeight="Semilight" 
                                   TextTrimming="WordEllipsis" 
                                   TextWrapping="Wrap" 
                                   HorizontalAlignment="Left"
                        />
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Sessioncode:" 
                                       FontSize="12"
                                       FontWeight="SemiBold" 
                                       Margin="10,0,0,0" 
                                       TextTrimming="WordEllipsis" 
                                       TextWrapping="NoWrap"
                            />
                            <TextBlock Text="{Binding Sessioncode}" 
                                       FontSize="12"
                                       FontWeight="Normal" 
                                       Margin="10,0,0,0" 
                                       TextTrimming="WordEllipsis" 
                                       TextWrapping="NoWrap"
                             />
                        </StackPanel>
                    </StackPanel>
                    <!-- Seconf Vertical Stackpanel -->
                    <StackPanel Orientation="Vertical" Width="300" VerticalAlignment="Top" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="On:" 
                                       FontSize="12"
                                       FontWeight="SemiBold" 
                                       Margin="10,0,0,0" 
                                       TextTrimming="WordEllipsis" 
                                       TextWrapping="NoWrap"
                            />
                            <TextBlock Text="{Binding Day}" 
                                       FontSize="12"
                                       FontWeight="Normal" 
                                       Margin="10,0,0,0" 
                                       TextTrimming="WordEllipsis" 
                                       TextWrapping="NoWrap"
                             />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="From:" 
                                       FontSize="12"
                                       FontWeight="SemiBold" 
                                       Margin="10,0,0,0" 
                                       TextTrimming="WordEllipsis" 
                                       TextWrapping="NoWrap"
                            />
                            <TextBlock Text="{Binding StartTime}" 
                                       FontSize="12"
                                       FontWeight="Normal" 
                                       Margin="10,0,0,0" 
                                       TextTrimming="WordEllipsis" 
                                       TextWrapping="NoWrap"
                             />
                            <TextBlock Text="to" 
                                       FontSize="12"
                                       FontWeight="SemiBold" 
                                       Margin="10,0,0,0" 
                                       TextTrimming="WordEllipsis" 
                                       TextWrapping="NoWrap"
                            />
                            <TextBlock Text="{Binding EndTime}" 
                                       FontSize="12"
                                       FontWeight="Normal" 
                                       Margin="10,0,0,0" 
                                       TextTrimming="WordEllipsis" 
                                       TextWrapping="NoWrap"
                             />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="In room:" 
                                       FontSize="12"
                                       FontWeight="SemiBold" 
                                       Margin="10,0,0,0" 
                                       TextTrimming="WordEllipsis" 
                                       TextWrapping="NoWrap"
                            />
                            <TextBlock Text="{Binding Room}" 
                                       FontSize="12"
                                       FontWeight="Normal" 
                                       Margin="10,0,0,0" 
                                       TextTrimming="WordEllipsis" 
                                       TextWrapping="NoWrap"
                             />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </DataTemplate>

            <x:String x:Key="ida:ClientIDPPE">06ce13de-f89a-4e18-aa6e-f63c60d777f9</x:String>
            <x:String x:Key="ida:ClientID">f09f22aa-fff1-4053-b9d4-2deb433e6d10</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>

