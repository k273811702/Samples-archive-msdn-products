<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="MSDN.SharePoint.Samples.ProductBrowser.StatusBarControl"
	d:DesignWidth="610" d:DesignHeight="26">

	<Grid x:Name="LayoutRoot">
		<Border x:Name="StatusBarContainer" Margin="0" Background="#FF9D9D9D" CornerRadius="5" Padding="10,2">
			<StackPanel Orientation="Horizontal">
				<TextBlock x:Name="StatusTextBlock" Height="14" Text="Ready..." Foreground="#FF4D4D4D"/>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>