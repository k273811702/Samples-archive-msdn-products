<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BarChartBarStyle" TargetType="Rectangle">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="RadiusX" Value="3"/>
        <Setter Property="RadiusY" Value="3"/>
        <Setter Property="Grid.Column" Value="1"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="6,0,6,0"/>
    </Style>
    <Style x:Key="BarChartNameStyle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Grid.Column" Value="1"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="12,2,0,0"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="#FF000000"/>
    </Style>
    <Style x:Key="DefaultTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="#FF73767B"/>
    </Style>
    <Style x:Key="LeftTextStyle" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextStyle}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="11,0,0,0"/>
    </Style>
    <Style x:Key="RightTextStyle" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextStyle}">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>

</ResourceDictionary>
