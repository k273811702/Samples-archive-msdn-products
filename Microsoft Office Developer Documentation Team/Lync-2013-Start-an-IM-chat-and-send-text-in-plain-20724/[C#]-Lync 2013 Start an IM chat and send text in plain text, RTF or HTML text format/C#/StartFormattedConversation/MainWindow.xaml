<Window x:Class="StartConversation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <GroupBox Header="Participants" Margin="10,10,0,247" HorizontalAlignment="Left" Width="261">
            <RichTextBox Name="rtbParticipants" Height="24" Width="234" />
        </GroupBox>
        <Button Content="Start Conversation and Send Message" Margin="152,85,145,193" Name="btnStartConv" Click="btnStartConv_Click" />
        <GroupBox Header="Error Message" HorizontalAlignment="Left" Margin="33,204,0,12" Width="238">
            <TextBox Height="61" Name="txtErrors" Width="206" />
        </GroupBox>
        <GroupBox Header="Message Format" Height="133" HorizontalAlignment="Left" Margin="12,70,0,0" Name="groupBox1" VerticalAlignment="Top" Width="134">
            <Grid Height="110" Width="106">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*" />
                    <ColumnDefinition Width="212*" />
                </Grid.ColumnDefinitions>
                <RadioButton Content="GIF" Height="16" HorizontalAlignment="Left" Margin="4,26,0,0" Name="radioGif" VerticalAlignment="Top" Width="111" Grid.Column="1" Click="radioGif_Click"/>
                <RadioButton Content="INK" Height="16" HorizontalAlignment="Left" Margin="4,36,0,0" Name="radioInk" VerticalAlignment="Top" Width="111" Grid.Column="1" Click="radioInK_Click"/>
                <RadioButton Content="HTML" Height="16" HorizontalAlignment="Left" Margin="4,46,0,0" Name="radioHtml" VerticalAlignment="Top" Width="111" Grid.Column="1" IsChecked="True" Click="radioHtml_Click"/>
                <RadioButton Content="RTF" Height="16" HorizontalAlignment="Left" Margin="4,56,0,0" Name="radioRtf" VerticalAlignment="Top" Width="111" Grid.Column="1" Click="radioRtf_Click"/>
                <RadioButton Content="Plain Text" Height="16" HorizontalAlignment="Left" Margin="4,66,0,0" Name="radioText" VerticalAlignment="Top" Width="111" Grid.Column="1" Click="radioText_Click"/>
                </Grid>
        </GroupBox>
    </Grid>
</Window>
