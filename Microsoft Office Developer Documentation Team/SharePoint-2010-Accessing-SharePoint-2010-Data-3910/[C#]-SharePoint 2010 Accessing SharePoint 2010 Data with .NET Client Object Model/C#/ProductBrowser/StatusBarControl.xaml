<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="ProductBrowser.StatusBarControl"
	x:Name="UserControl"
	d:DesignWidth="614" d:DesignHeight="30">

	<Grid x:Name="LayoutRoot">
		<Border x:Name="StatusBarContainer" Background="#FF9D9D9D" CornerRadius="5" Padding="10,2">
			<StackPanel Orientation="Horizontal">
				<TextBlock x:Name="StatusTextBlock" Height="14" Foreground="#FF4D4D4D" Text="Ready..."/>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>