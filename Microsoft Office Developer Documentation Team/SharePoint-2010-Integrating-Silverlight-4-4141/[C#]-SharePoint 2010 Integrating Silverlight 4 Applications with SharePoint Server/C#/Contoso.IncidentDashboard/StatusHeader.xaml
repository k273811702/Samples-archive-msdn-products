<UserControl x:Class="Contoso.IncidentDashboard.StatusHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border x:Name="LayoutRoot" CornerRadius="10" HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent">
        <StackPanel Orientation="Horizontal" Margin="5">
            <Image x:Name="imgIcon" Height="21" Width="21" VerticalAlignment="Center" Margin="0,0,0,0" Visibility="Collapsed" />
            <TextBlock VerticalAlignment="Center" Margin="5,0,0,0" FontSize="12">
                <Run x:Name="txtLabel" Text="Test Test" />
                <Run x:Name="txtCount" Text=" (0)" />
            </TextBlock>
        </StackPanel>
    </Border>
</UserControl>
